@model IEnumerable<Employee_Mannagement.Models.EmployeeModel>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Create New</a> 

    <form asp-action="Index" method="get">
        <b>Search By : </b>
        <input type="radio" id="searchby" name="searchby" value="firstname">
        <label for="firstname">FirstName</label>
        <input type="radio" id="searchby" name="searchby" value="lastname">
        <label for="lastname">LastName</label><br />
        <input type="text" name="search"/>
        <input type="submit" value="Search" />
    </form>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Designation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Education)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @if(Model.Count() == 0)
        {
            <tr>
                <td>
                    <p><b>ROWS NOT FOUND !!!</b></p>
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Designation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Education)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Project)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.EmpId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.EmpId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.EmpId">Delete</a>
                    </td>
                </tr>
            }
        } 
    </tbody>
</table>
